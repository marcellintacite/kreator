{
  "name": "Kreator AI",
  "version": "0.1",
  "manifest_version": 3,
  "description": "This extension provides an AI-powered capability in any web page's side panel.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["sidePanel","contextMenus","nativeMessaging","scripting","activeTab","storage"],
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "icons":{
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Open Kreator AI Side Panel"
  }
}
